<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    app:cardCornerRadius="10dp"
    android:background="@color/colorWhite"
    android:gravity="center"
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/layout_background"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:text="1"
            android:id="@+id/txtCount"
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:background="@drawable/shape_edt"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_toStartOf="@id/txtCount"
            android:src="@drawable/ic_add"
            android:tint="@color/colorPrimaryDark"
            android:layout_margin="5dp"
            android:layout_alignTop="@id/txtCount"
            android:layout_alignBottom="@id/txtCount"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:cardCornerRadius="16dp"
            android:id="@+id/cardPlus"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:src="@drawable/ic_minus"
            android:tint="@color/colorPrimaryDark"
            android:layout_toEndOf="@id/txtCount"
            android:layout_margin="5dp"
            android:layout_alignTop="@id/txtCount"
            android:layout_alignBottom="@id/txtCount"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:cardCornerRadius="16dp"
            android:id="@+id/cardMinus"/>

        <Button
            android:layout_below="@id/txtCount"
            android:id="@+id/btnSubmit"
            android:background="@drawable/shape_edt"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/submit_request"
            android:textSize="14sp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorWhite"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>