<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:text="@string/reservation_date"/>

    <DatePicker
        android:theme="@style/NewDialog1"
        android:id="@+id/date_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        android:calendarTextColor="@color/colorPrimary"
        android:spinnersShown="true" />

    <TimePicker
        android:theme="@style/NewDialog1"
        android:numbersInnerTextColor="@color/colorPrimary"
        android:numbersTextColor="@color/colorPrimary"
        android:id="@+id/time_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:timePickerMode="spinner" />

    <Button
        android:id="@+id/date_time_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_btn"
        android:backgroundTint="@color/colorPrimary"
        android:padding="20dp"
        android:text="@string/confirm"
        android:textColor="@color/colorWhite" />

</LinearLayout>